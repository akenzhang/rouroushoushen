<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    >

    <!-- android:background="#ffffff" -->
    <RelativeLayout
        android:background="@drawable/me_fragment_store_roundcorner"
        android:padding="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/id_my_store_item_image01"
            android:src="@drawable/b"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="120dp" />
        <TextView
            android:layout_below="@+id/id_my_store_item_image01"
            android:id="@+id/id_my_store_item_Description01"
            android:textColor="#000000"
            android:textSize="18sp"
            android:text="彩色牛奶杯"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@+id/id_my_store_item_Description01"
            android:id="@+id/id_my_store_item_ScoreDescription01"
            android:textColor="#ff396d"
            android:textSize="15sp"
            android:text="1080积分"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <RelativeLayout
        android:background="@drawable/me_fragment_store_roundcorner"
        android:padding="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/id_my_store_item_image02"
            android:src="@drawable/b"
            android:layout_width="match_parent"
            android:layout_height="120dp" />
        <TextView
            android:layout_below="@+id/id_my_store_item_image02"
            android:id="@+id/id_my_store_item_Description02"
            android:textColor="#000000"
            android:textSize="18sp"
            android:text="彩色牛奶杯"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_below="@+id/id_my_store_item_Description02"
            android:id="@+id/id_my_store_item_ScoreDescription02"
            android:textColor="#ff396d"
            android:textSize="15sp"
            android:text="1080积分"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>

</LinearLayout>
