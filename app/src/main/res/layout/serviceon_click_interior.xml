<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="akenzhang.rouroushoushen.service.ServiceonClickActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FF396D">
    <ImageView
        android:id="@+id/news_top_bar_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_centerVertical="true"
        android:src="@drawable/b" />
    <TextView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="22dp"
        android:textColor="#FCFCFC"
        android:textSize="15dp"
        android:text="返回" />
    <TextView
        android:id="@+id/news_top_bar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="#FCFCFC"
        android:textSize="15dp"
        android:text="肉肉优选" />

    <ImageView
        android:id="@+id/issue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp"
        android:layout_centerVertical="true"
        android:src="@drawable/d" />

    <ImageView
        android:id="@+id/news_top_bar_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        android:layout_centerVertical="true"
        android:src="@drawable/b" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#FFFFCC"
        android:layout_height="50dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="7dp"
            android:text="公告：肉肉发货时间为当天或次日，大部分地区1-3天送达!"
            android:textColor="#FF9E0B"
            />
    </LinearLayout>
    
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPg"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <View
                android:id="@+id/v_dot1"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="#7b7676"
                />
            <View
                android:id="@+id/v_dot2"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="#7b7676"
                android:layout_marginLeft="5dp"
                />

        </LinearLayout>
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="60dp">
        <Button
            android:textColor="#FE0D0D"
            android:background="#F9F9F9"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:text="吃不胖"
            android:layout_weight="1"
            />
        <Button
            android:textColor="#FE0D0D"
            android:background="#F9F9F9"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:text="喝不胖"
            android:layout_weight="2"
            />
        <Button
            android:textColor="#FE0D0D"
            android:background="#F9F9F9"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:text="好用的"
            android:layout_weight="3"
            />
        <Button
            android:textColor="#FE0D0D"
            android:background="#F9F9F9"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:text="热门的"
            android:layout_weight="4"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:src="@drawable/w"/>
        <ImageView
            android:layout_marginLeft="13dp"
            android:layout_width="90dp"
            android:layout_height="68dp"
            android:layout_weight="2"
            android:src="@drawable/q"/>
        <ImageView
            android:layout_width="68dp"
            android:layout_height="70dp"
            android:layout_weight="3"
            android:src="@drawable/e"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="让你猴年瘦"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#5c5c5c"/>
</LinearLayout>
