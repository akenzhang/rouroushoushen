<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".service.adapter.ServiceonClickActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FF396D">
    <ImageView
        android:id="@+id/news_top_bar_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_article_page_back" />
    <TextView
        android:id="@+id/back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="22dp"
        android:textColor="#FCFCFC"
        android:text="返回" />
    <TextView
        android:id="@+id/news_top_bar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="#FCFCFC"
        android:text="肉肉优选" />

    <ImageView
        android:id="@+id/issue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="60dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_customer_service" />

    <ImageView
        android:id="@+id/news_top_bar_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:src="@drawable/ic_complain" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#FFFFCC"
        android:layout_height="50dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="7dp"
            android:text="公告：肉肉发货时间为当天或次日，大部分地区1-3天送达!"
            android:textColor="#FF9E0B"
            />
    </LinearLayout>
    
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPg"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            >
            <View
                android:id="@+id/v_dot1"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="#7b7676"
                />
            <View
                android:id="@+id/v_dot2"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="#7b7676"
                android:layout_marginLeft="5dp"
                />

        </LinearLayout>
    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="60dp">
        <Button
            android:textColor="#FE0D0D"
            android:background="#F9F9F9"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:text="吃不胖"
            android:layout_weight="1"
            />
        <Button
            android:textColor="#FE0D0D"
            android:background="#F9F9F9"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:text="喝不胖"
            android:layout_weight="2"
            />
        <Button
            android:textColor="#FE0D0D"
            android:background="#F9F9F9"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:text="好用的"
            android:layout_weight="3"
            />
        <Button
            android:textColor="#FE0D0D"
            android:background="#F9F9F9"
            android:layout_width="90dp"
            android:layout_height="50dp"
            android:text="热门的"
            android:layout_weight="4"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="10dp"
            android:layout_width="90dp"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:src="@drawable/w"/>
        <ImageView
            android:layout_marginLeft="13dp"
            android:layout_width="90dp"
            android:layout_height="68dp"
            android:layout_weight="2"
            android:src="@drawable/q"/>
        <ImageView
            android:layout_width="68dp"
            android:layout_height="70dp"
            android:layout_weight="3"
            android:src="@drawable/e"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:text="让你猴年瘦"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textAlignment="center"
        />
    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#5c5c5c"/>
        
        <LinearLayout

            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="400dp">
            
            <ImageView
                android:id="@+id/tu1"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:background="@drawable/b"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="8dp"
                android:text="狂减肚子刮油清肠荷叶茶【瘦身瘦腿通便】"/>
           <LinearLayout
               android:layout_width="match_parent"
               android:orientation="horizontal"
               android:layout_height="50dp">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="30dp"
                   android:layout_marginLeft="8dp"
                   android:textColor="#f90000"
                   android:text="$ 16.90"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="30dp"
                   android:layout_marginLeft="8dp"
                   android:textSize="10dp"
                   android:text="29.80"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="30dp"
                   android:text="                                                            "/>
               <ImageView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginRight="8dp"
                   android:layout_centerVertical="true"
                   android:src="@drawable/item_my_order"/>
           </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="400dp">

            <ImageView
                android:id="@+id/tu2"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:background="@drawable/b"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="8dp"
                android:text="严格监督小队 (肉肉定制监督服务)"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="8dp"
                    android:textColor="#f90000"
                    android:text="$ 32.00"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="                                                                    "/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/item_my_order"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="400dp">

            <ImageView
                android:id="@+id/tu3"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:background="@drawable/b"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="8dp"
                android:text="【鼎轩】 仰卧起做器材健身家用运动拉力器..."/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="8dp"
                    android:textColor="#f90000"
                    android:text="$ 32.00"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="                                                                   "/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/item_my_order"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="400dp">

            <ImageView
                android:id="@+id/tu4"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:background="@drawable/b"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="8dp"
                android:text="燃脂神器黑咖啡 越南进口提高新陈代谢"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="8dp"
                    android:textColor="#f90000"
                    android:text="$ 15.00"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="8dp"
                    android:textSize="10dp"
                    android:text="原价：28.50"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="                                                           "/>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:layout_centerVertical="true"
                    android:src="@drawable/item_my_order"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</ScrollView>

</LinearLayout>
