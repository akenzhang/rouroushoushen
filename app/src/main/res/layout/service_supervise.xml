<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="akenzhang.rouroushoushen.service.adapter.ServicesuperviseActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#FF396D">
        <ImageView
            android:id="@+id/news_top_bar_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_article_page_back" />
        <TextView
            android:id="@+id/superviseback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="22dp"
            android:textColor="#FCFCFC"
            android:text="返回" />
        <TextView
            android:id="@+id/superviseclose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="60dp"
            android:textColor="#FCFCFC"
            android:text="关闭" />
        <TextView
            android:id="@+id/news_top_bar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="#FCFCFC"
            android:text="肉肉优选" />

        <ImageView
            android:id="@+id/superviseissue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="60dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_customer_service" />

        <ImageView
            android:id="@+id/supervisedian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_complain" />
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#050505"
        >
        <ImageView
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:src="@drawable/notification_icon"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="肉肉优选"
            android:textColor="#fff"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="50dp"/>
        />
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="70dp"
            android:layout_centerVertical="true"
            android:src="@drawable/abc_ic_search_api_mtrl_alpha" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:text="我的记录"
            android:textColor="#fff"
            android:layout_centerVertical="true" />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/superviseViewP"
        android:layout_width="match_parent"
        android:layout_height="130dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:padding="5dp"
            android:gravity="center"
            android:orientation="horizontal"
            >
        </LinearLayout>
    </android.support.v4.view.ViewPager>


    <LinearLayout

        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="@drawable/me_fragment_store_roundcorner"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/id_my_store_item_image01"
                android:src="@drawable/p"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="150dp" />
            <TextView
                android:layout_below="@+id/id_my_store_item_image01"
                android:id="@+id/id_my_store_item_Description01"
                android:textColor="#000000"
                android:textSize="15sp"
                android:text="严格监督小队（肉肉定制监督服务）"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_below="@+id/id_my_store_item_Description01"
                android:id="@+id/id_my_store_item_ScoreDescription01"
                android:textColor="#ff396d"
                android:textSize="12sp"
                android:text="￥35.00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_below="@+id/id_my_store_item_Description01"
                android:layout_width="20dp"
                android:layout_marginLeft="130dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_launcher"/>
        </RelativeLayout>


        <RelativeLayout
            android:background="@drawable/me_fragment_store_roundcorner"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/id_my_store_item_image02"
                android:src="@drawable/p"
                android:layout_width="match_parent"
                android:layout_height="150dp" />
            <TextView
                android:layout_below="@+id/id_my_store_item_image02"
                android:id="@+id/id_my_store_item_Description02"
                android:textColor="#000000"
                android:textSize="15sp"
                android:text="贴心提醒小队（肉肉定制监督服务）"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_below="@+id/id_my_store_item_Description02"
                android:id="@+id/id_my_store_item_ScoreDescription02"
                android:textColor="#ff396d"
                android:textSize="12sp"
                android:text="$35.00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_below="@+id/id_my_store_item_Description02"
                android:layout_width="20dp"
                android:layout_marginLeft="130dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_launcher"/>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="@drawable/me_fragment_store_roundcorner"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/id_my_store_item_image03"
                android:src="@drawable/p"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="150dp" />
            <TextView
                android:layout_below="@+id/id_my_store_item_image03"
                android:id="@+id/id_my_store_item_Description03"
                android:textColor="#000000"
                android:textSize="15sp"
                android:text="肉肉减肥教练-教练让你瘦"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_below="@+id/id_my_store_item_Description03"
                android:id="@+id/id_my_store_item_ScoreDescription03"
                android:textColor="#ff396d"
                android:textSize="12sp"
                android:text="￥35.00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_below="@+id/id_my_store_item_Description03"
                android:layout_width="20dp"
                android:layout_marginLeft="130dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_launcher"/>
        </RelativeLayout>

        <RelativeLayout
            android:background="@drawable/me_fragment_store_roundcorner"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/id_my_store_item_image04"
                android:src="@drawable/p"
                android:layout_width="match_parent"
                android:layout_height="150dp" />
            <TextView
                android:layout_below="@+id/id_my_store_item_image04"
                android:id="@+id/id_my_store_item_Description05"
                android:textColor="#000000"
                android:textSize="15sp"
                android:text="肉肉减肥咨询--教练教你瘦"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_below="@+id/id_my_store_item_Description05"
                android:id="@+id/id_my_store_item_ScoreDescription05"
                android:textColor="#ff396d"
                android:textSize="12sp"
                android:text="$35.00"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_below="@+id/id_my_store_item_Description05"
                android:layout_width="20dp"
                android:layout_marginLeft="130dp"
                android:layout_height="20dp"
                android:src="@mipmap/ic_launcher"/>
        </RelativeLayout>
    </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:layout_marginLeft="90dp"
                    android:layout_gravity="center"
                    android:text="店铺主页"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:text="会员中心"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:text="关注我们"/>
            </LinearLayout>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#5c5c5c"/>


            </LinearLayout>
    </ScrollView>
</LinearLayout>
