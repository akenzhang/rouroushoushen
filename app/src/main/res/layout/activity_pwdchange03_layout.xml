<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:id="@+id/id_my_store"
        android:layout_marginTop="0dp"
        android:background="#ff396d"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/id_btn_pwd_change_back"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_back_white"
            android:layout_width="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_centerVertical="true"
            android:textAlignment="center"
            android:textSize="18sp"
            android:textColor="#ffffff"
            android:text="设置密码"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <EditText
        android:layout_marginTop="25dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:hint="请输入密码(6-12个字符)"
        android:textSize="22sp"
        android:textColorHint="#cdcdcd"
        android:id="@+id/id_pwd_firstinput"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:hint="请再次确认密码"
        android:textSize="22sp"
        android:textColorHint="#cdcdcd"
        android:id="@+id/id_pwd_confirm"
        android:inputType="textPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/id_pwd_ok"
        android:background="@drawable/login_qq_gradient_bg"
        android:layout_margin="18dp"
        android:text="确定"
        android:textSize="22sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
